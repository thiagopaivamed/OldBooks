@model IEnumerable<OldBooks.BLL.Models.Comentario>

@{
    Layout = null;
}

<div class="container">
    <div class="row">
        <h4 class="text-primary"><strong>Comentários</strong></h4><br />
        @foreach (var item in Model)
        {

            <h6><strong>@Html.DisplayFor(modelItem => item.Usuario.Nome).ToString().ToUpper()</strong></h6>
            <h6><strong>Comentario: </strong>@Html.DisplayFor(modelItem => item.Texto)</h6>
            <hr />
        }
    </div>
</div>