@model OldBooks.Models.IndexViewModel
@{
    ViewBag.Title = "Gerencie sua Conta";
}

<link href="~/fonts/font-awesome/css/font-awesome.css" rel="stylesheet" />

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h2 align="center"><strong>Gerencie sua Conta</strong></h2>
    <hr />
    <div class="container" align="center">
        <div class="row">
            <div class="col-md-12">
                <p>
                    <a href="~/Manage/ChangePassword" class="btn btn-squared-default-plain btn-danger">
                        <i class="fa fa-lock fa-5x"></i><br />
                        <br />Mudar Senha
                    </a>

                    <a href="/Livros/Index" class="btn btn-squared-default-plain btn-success">
                        <i class="fa fa-book fa-5x"></i><br />
